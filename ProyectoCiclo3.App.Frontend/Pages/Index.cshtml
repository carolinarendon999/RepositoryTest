@page
@model IndexModel
@{
  ViewData["Title"] = "Home page";
}

<head>
  <link rel="stylesheet" href="~/css/index.css" />
  <link rel="stylesheet" href="~/css/bootstrap.min.css" />
  @* <script type="text/javascript" src="~/js/modernizr.custom.46884.js"></script> *@
  <script type="text/javascript" src="~/js/bootstrap.js"></script>
  <script type="text/javascript" src="~/js/popper.js"></script>


<body>
  <style>
    body {
      background: rgb(238, 174, 202);
      background: radial-gradient(circle, rgba(238, 174, 202, 1) 0%, rgba(148, 187, 233, 1) 100%);
    }
  </style>
  <div class="text-center">
      @* <img src="https://c.tenor.com/k5JMOBQlND0AAAAC/rick-and-morty-run-the-jewels.gif" width="100%" height="100%"
        alt=""> *@


    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="~/img/amazon.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 id="titleSlide">First slide label</h5>
            <p style="color:black;">Some representative placeholder content for the first slide.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="~/img/amazon2.png" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 id="titleSlide">Second slide label</h5>
            <p style="color:black;">Some representative placeholder content for the second slide.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="~/img/amazon3.png" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 id="titleSlide">Third slide label</h5>
            <p style="color:black;">Some representative placeholder content for the third slide.</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>





    <table class="table">
      <tr>
        <td>
          <div class="card" style="width: 18rem;">
            <img src="https://cdn-icons-png.flaticon.com/512/47/47769.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Usuario</h5>
              <p id="parrafo" class="card-text">En nuestra empresa buscamos que nuestros usuarios siempre esten
                satisfechos
                con cada prodcuto que adquieren .</p>
              <a id="btnGo" href="https://www.amazon.com/-/es/gp/css/homepage.html?ref_=hp_ss_v3_rr_t4" class="btn">Ver Más</a>
            </div>
          </div>
        </td>

        <td>
          <div class="card" style="width: 18rem;">
            <img src="~/img/delivery.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Servicio</h5>
              <p id="parrafo" class="card-text">Buscamos siempre ofrecer el mejor servicio a nuestros usuarios
                ofrenciendo les
                la mejor experiencia.</p>
              <a id="btnGo" href="https://aws.amazon.com/es/products/?nc2=h_ql_prod_fs_f" class="btn ">Ver Más</a>
            </div>
          </div>
        </td>

        <td>
          <div class="card" style="width: 18rem;">
            <img src="~/img/package.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Encomienda</h5>
              <p id="parrafo" class="card-text">Garantizamos que tu paquete llegue en perfecto estado, además
                que tu encomienda llegue en el tiempo que fue estipulado.
              </p>
              <a id="btnGo" href="https://www.amazon.com/gp/css/order-history?ie=UTF8&language=es&ref_=hp_ss_v3_yo_t4&" class="btn ">Ver Más</a>
            </div>
          </div>
        </td>

      </tr>
    </table>



  </div>
  <script type="text/javascript" src="~/js/bootstrap.js"></script>
  <script type="text/javascript" src="~/js/popper.js"></script>

</body>

</head>