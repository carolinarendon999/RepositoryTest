@page
@model ProyectoCiclo3.App.Frontend.Pages.EditEncomiendaModel
@{
  var encomienda = Model.Encomienda;
}

<div class="card" style="width: 18rem; margin: 0 auto; 
float: none; 
margin-bottom: 10px;
margin-top:70px;
border-radius: 30px;">
  <img src="~/img/6.jpg" class="card-img-top" style="border-radius: 30px;" alt="...">

  <div class="card-body justify-content-center">
    <form method="post">

      @* <label for="id" class="form-label">id:</label> *@
      <input type="number" class="d-none" id="id" name="id" placeholder="id" asp-for="@encomienda.id">

      <label for="Descripcion" class="form-label">Descripción:</label>
      <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion"
        asp-for="@encomienda.descripcion">

      <label for="Peso" class="form-label">Peso:</label>
      <input type="number" class="form-control" id="peso" name="peso" placeholder="Peso" asp-for="@encomienda.peso">

      <label for="Tipo" class="form-label">Tipo:</label>
      <input type="text" class="form-control" id="tipo" name="tipo" placeholder="Tipo" asp-for="@encomienda.tipo">

      <label for="Presentacion" class="form-label">Presentación:</label>
      <input type="text" class="form-control" id="presentacion" name="presentacion" placeholder="Presentacion"
        asp-for="@encomienda.presentacion">


      <hr>
      <button type="submit" class="btn btn-success">Enviar</button>
    </form>
  </div>
</div>