@page
@model ProyectoCiclo3.App.Frontend.Pages.ListUsuarioModel
@{
}

<h1>Listado de Usuario</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Direccion</th>
            <th scope="col">Telefono</th>
        </tr>
    </thead>

    @foreach (var usuario in Model.Usuario)
    {
        <tr>
            <td>@usuario.id</td>
            <td>@usuario.nombre</td>
            <td>@usuario.apellidos</td>
            <td>@usuario.direccion</td>
            <td>@usuario.telefono</td>
            <td>
                <a class="btn btn-info" style="" asp-page="./Details" asp-route-usuarioId="@usuario.id"><i
                    class="fas fa-adjust"></i>Ver</a>
                @* <style>
                    #btn_editar:hover{background-color: red}
                    </style> *@
                <a class="btn btn-info" id="btn_editar"
                style="{background-color: beige; color: black; border-radius: 20px;border-color: beige;}:hover{background-color: red}"
                asp-page="./Edit" asp-route-usuarioId="@usuario.id">Editar</a>
                <form method="POST">
                    <input type="number" class="form-control d-none" id="id" name="id" placeholder="id"
                    asp-for="@usuario.id">
                    <button type="submit" class="btn btn-danger" href="">Eliminar</button>
                </form>
            </td>
        </tr>
    }
</table>